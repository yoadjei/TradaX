{
  "expo": {
    "name": "TradaX",
    "slug": "tradax",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tradax.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for wallet addresses and trading."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.tradax.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.VIBRATE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/icon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow TradaX to access your camera for QR code scanning."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow TradaX to use Face ID for secure authentication."
        }
      ]
    ],
    "extra": {
       "authServiceUrl": "http://x.x.x.x:8083",
  "walletServiceUrl": "http://x.x.x.x:8082",
      "rapidApiChatKey": "key",
      "coingeckoApiKey": "key",
      "gnewsApiKey": "key",
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "scheme": "tradax",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": "exposdk:53.0.0"
  }
}
